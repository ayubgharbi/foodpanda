
<%= form_for([@restaurant, @order]) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
  
    <div class="field">
      <%= f.label :additional_instructions, "Instructions additionnelles" %>
      <%= f.text_area :additional_instructions, rows: 3, cols: 40, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :address , "Votre addresse" %>
      <%= f.text_area :address, rows: 3, cols: 40, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :pay_type, "méthode de paiement" %>
      <%= f.select :pay_type, Order.pay_types.keys, prompt: 'Choisissez une méthode de paiement', class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit 'Place Order', class: "btn btn-search" %>
    </div>
  </div>
<% end %>

