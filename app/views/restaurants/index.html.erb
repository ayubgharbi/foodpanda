  <div class="container">
  <h1 style="position: relative; left: 260px;">Restaurants</h1>
  <div class="clear"></div>
    <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-2 col-xs-2 col-sm-2">
        <div class="restaurant">
          <div class="image_wrapper" style="background-color: transparent">
            <%= link_to restaurant do %>
              <%= image_tag restaurant.image.url(:large) %>
            <% end %> 
          </div>    
        </div>
        <p class="restaurant-title"><%= restaurant.name %></p>
      </div> 
    <% end %>
  </div>
</div>
