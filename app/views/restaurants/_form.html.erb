<%= form_for @restaurant do |f| %>
  
    <% if restaurant.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
        <ul>
        <% restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, size: 40, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address, class: "form-control" %>
  </div>

  <div class="field">
  <%= f.label :delivery_areas %><br />
  <%= f.collection_check_boxes :area_ids, Area.all, :id, :name do |b| %>
    <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
  <% end %>
</div>

  <div class="field">
    <%= f.label :estimated_delivery_time %><br>
    <%= f.number_field :estimated_delivery_time, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :delivery_fee %><br>
    <%= f.number_field :delivery_fee, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :delivery_minimum %><br>
    <%= f.number_field :delivery_minimum, class: "form-control" %>
  </div>
    
  <div class="actions">
    <%= f.submit class: "btn btn-search" %>
  </div>

<% end %>




