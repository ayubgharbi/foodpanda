<!DOCTYPE html>
<html>
  <head>
    <title>OrderFoodInMorocco</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
      <nav class="navbar nabar-default">
        <div class="container">
          <%= link_to restaurant_index_path do %>
            <%= image_tag('logo.svg', "data-svg-fallback" => image_path('logo.svg'), :align=> "left" ,:style => "padding-right: 5px; width: 152px; height: 76px;") %>
          <% end %>
          <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to 'Restaurants', restaurants_path %></li>
                  <% if session[:user_id] %>
                    <li><%= link_to 'Orders',   orders_path   %></li>
                    <li><%= link_to 'Dishes', foods_path %></li>
                    <li><%= link_to 'Users',    users_path    %></li>
                    <li><%= link_to 'Logout',   logout_path, method: :delete %></li>
                  <% end %>
                </ul>
       
        </div>  
      </nav>
       
              <% if @cart %>
                <div class="row">
                  <div class="col-md-3">
                    <div class="container">
                      <div id="cart">
                        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                          <%= render @cart %>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-9">
                    <div class="container">
                      <div id="main">
                        <%= yield %>
                      </div>
                    </div>
                  </div>
              <% else %>
                  <div class="container">
                      <div id="main">
                        <%= yield %>
                      </div>
                    </div>
                  </div>
              <% end %>
      </div>
  </body>
</html>
