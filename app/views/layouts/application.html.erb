<!DOCTYPE html>
<html>
  <head>
    <title>OrderFoodInMorocco</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
      <div class="row">
        <div class="col-md-3" id="order-cart">
          <div class="container">
            <div id="cart">
              <% if @cart %>
                <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
                  <%= render @cart %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="container">
            <div id="main">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
