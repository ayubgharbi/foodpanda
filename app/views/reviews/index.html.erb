<div class="centerDisplay">
  <div class="row">
    <div class="col-md-7 col-xs-7">
      <h2 style="font-family: 'Lobster', cursive;position: relative; right: 42px; border-bottom: 3px solid #E32523;"><%= @restaurant.name %></h2>
      <div class="clear"></div>
      <div class="vendor-tabs">
      <ul class="nav nav-tabs vendor-tabs">
          <li>
            <%= link_to 'Menu', restaurant_foods_path(@restaurant) %> 
          </li>
          <li class="<%=is_active('index')%>">
            <%= link_to 'Reviews', restaurant_reviews_path(@restaurant) %> 
          </li>
          <li>
            <%= link_to 'Info', restaurant_info_path(@restaurant) %> 
          </li>
      </ul>
      </div>

      <div id="reviews">
        <div class="vendor-reviews">
          <div class="vendor-reviews__inner">
            <ul class="reviews">
              <% @restaurant.reviews.each do |review| %>
                <li class="reviews__review">
                  <div class="reviews__review__date">
                    <span class="reviews__review__date__date"><%= review.created_at.to_date %></span>
                    <span class="reviews__review__date__author"><%= review.user.name %></span>
                  </div>
                  <div class="reviews__review__review">
                    <div class="star-rating" data-score= <%= @avg_review %> ></div>
                    <em class="reviews__review__review__title"><%= review.comment %></em>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      
      <div id="write-review">
        <%= link_to "Write a Review", new_restaurant_review_path(@restaurant), id: "write-review" %>
      </div>
      
    </div>
    <div class="col-md-5 col-xs-5">
      <div class="logo-restaurant">
        <%= image_tag @restaurant.image.url(:medium) , class: "vendor-image" %>
      </div>
      <div class="rating">
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em class="reviews_length"><%= "(#{@reviews.length})" %></em>
      </div>
      <% if @cart %>
        <div id="cart">
            <%= render @cart %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
</script>

